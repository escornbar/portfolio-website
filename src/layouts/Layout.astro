---
import "@fontsource/montserrat";

const richblack = "#0B090A";
const eerieblack = "#161A1D";
const bloodred = "#660708";
const rubyred = "#A4161A";
const carnelian = "#BA181B";
const imperialred = "#d80032";
const blackshadows = "#B1A7A6";
const lightgray = "#D3D3D3";
const cultured = "#F5F3F4";
const white = "#FFFFFF";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style define:vars={{ richblack, eerieblack, bloodred, rubyred, carnelian, imperialred, blackshadows, lightgray, cultured, white }}>
    :global(body) {
        background-color: var(--richblack);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
            Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji",
            "Segoe UI Emoji", "Segoe UI Symbol";
        font-size: 16px;
        line-height: 1.5;
        margin: 0;
    }
</style>
